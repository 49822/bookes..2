<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg5 px-5 px-sm-0 mx-auto">
<div><h1>User info</h1></div>

<%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>
 <div> <label for="inputName">Name</label></div>
 <div>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  

 <div> <label for="inputImage">Image</label></div>
 
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
 
 <div><label for="inputIntroduction">Introduction</label></div>

  <%= f.text_area :introduction %>
  
 <div><%= f.submit "Update User" %></div>
<% end %>

</div>
</div>
</div>
